<div class= "signup">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
    <div class="form-group">
      <input class="form-control" placeholder="Name" autofocus="autofocus" type="text" name="user[name]" />
    </div>
        <div class="form-group">
          <input class="form-control" placeholder="Email address" autofocus="autofocus" type="email" name="user[email]" />
        </div>
        <div class="form-group">  
          <input class="form-control" placeholder="Password" autofocus="autofocus" type="password" name="user[password]" />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        </div>
        <div class="form-group">  
          <input class="form-control" placeholder="Password Confirmation" autofocus="autofocus" type="password" name="user[password_confirmation]" />
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Sign up" class="btn btn-lg btn-primary btn-block btn-signin" data-disable-with="Create my account" />
        </div>

  <% end %>
</div>


